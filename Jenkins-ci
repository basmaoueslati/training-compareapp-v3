pipeline {
    agent any
    stages {
        //Continuous Integration
        stage('Build') {
            steps {
                sh 'mvn clean package -DskipTests=true'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
                //Continuous Delivery
        stage('Docker Build&Push') {
            steps {
                withDockerRegistry(credentialsId: 'docker', url: "") {
                    sh 'docker build -t basmaoueslati/compare-appf25:v1 .'
                    sh 'docker push basmaoueslati/compare-appf25:v1'
                }
            }
        }
        //Continuous Deployment
      //  stage('Deploy') {
        //    steps {
          //      withDockerRegistry(credentialsId: 'docker', url: "") {
            //        sh 'docker -H ssh://ubuntu@15.188.73.227 run -d --name myapp -p 8082:8080 basmaoueslati/compare-appf25'
              //  }
           // }  
        }
//Ansible
        stage('Run Ansible Playbook') {
            steps {
                withCredentials([sshUserPrivateKey(credentialsId: 'ansible_ssh_key', keyFileVariable: 'SSH_KEY')]) {
                    sh "ansible-playbook -i inventory.ini playbook.yml --private-key=$SSH_KEY"
            }
        }
    }
}
