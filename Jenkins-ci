pipeline {
    agent any
    stages {
        //Continuous Integration
        stage('Build') {
            steps {
                sh 'mvn clean package -DskipTests=true'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Docker Build&Push') {
            steps {
                withDockerRegistry(credentialsId: 'docker', url: "") {
                    sh 'docker build -t basmaoueslati/compare-appf25:v1 .'
                    sh 'docker push basmaoueslati/compare-appf25:v1'
                }
            }
        }
        stage('Clean Old Docker Images') {
            steps {
                echo '___Cleaning up unused Docker images___'
                sh 'docker image prune -f'

                sh '''
                docker images --filter=reference='basmaoueslati/compare-appf25*' --format '{{.ID}} {{.Repository}}:{{.Tag}}' \
                  | grep -v 'compare-appf25:v1' \
                  | awk '{print $1}' \
                  | xargs -r docker rmi -f || true
                '''
            }
        }
//deploiement continue
        stage('Run Ansible Playbook') {
            steps {            
                sh 'ansible-playbook -i inventory.ini playbook.yml'
            
        }
    }
}
}
