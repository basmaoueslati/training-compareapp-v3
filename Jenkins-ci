pipeline {
    agent any
    stages {
        //Continuous Integration
        stage('Build') {
            steps {
                sh 'mvn clean package -DskipTests=true'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                
                sh 'ansible-playbook -i inventory.ini playbook.yml'
            
        }
    }
}
}
